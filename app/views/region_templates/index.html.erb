<h2><%= @title %></h2>
<%= form_tag region_templates_path, :method => 'get', :id => "regions_search" do %>
<p>
  <label>
    Search by name:
  </label>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
</p>
<div id="regions">
  <%= render 'regions' %>
</div>
<% end %>
<br />
<%= link_to 'Create new region', new_region_template_path if current_user.admin? %>
