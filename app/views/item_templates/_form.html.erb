<%= form_for @item, :validate => true do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
  <%= f.label :name %>
</div>
<div class="field">
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label "Description" %>
</div>
<div class="field">
  <%= f.text_area :desc %>
</div>
<div class="field">
  <%= f.label :cost %>
</div>
<div class="field">
  <%= f.text_field :cost %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
