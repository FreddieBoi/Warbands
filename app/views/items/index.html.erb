<h2><%= @title %></h2>
<%= form_tag items_path, :method => 'get', :id => "items_search" do %>
<p>
  <b>Name:</b>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
</p>
<div id="items">
  <%= render 'items' %>
</div>
<% end %>
<br />
<%= link_to 'Create new item', new_item_path if current_user.admin? %>
