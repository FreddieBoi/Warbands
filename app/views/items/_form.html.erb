<%= form_for(@item) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
  <%= f.label :name %>
  <br />
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :desc %>
  <br />
  <%= f.text_area :desc %>
</div>
<div class="field">
  <%= f.label :cost %>
  <br />
  <%= f.text_field :cost %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
