<div class="grid_3 alpha">
  <div id="my_warband">
    <h2><%= link_to current_user.warband.name, current_user.warband %></h2>
    <% current_user.warband.members.each do |member| %>
    <h3><%= link_to member.name, member  %></h3>
    <span><%= member.health %> / <%= member.max_health %></span>
    <br />
    <span><%= member.experience %> / 100 </span>
    <% end %>
  </div>
</div>
