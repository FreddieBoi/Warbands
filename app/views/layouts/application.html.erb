<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults, "kinetic-v1.0.0.js" %>
    <%= yield(:head)%>
  </head>
  <body>
    <div id="container" class="container_12">
      <div id="header" class="grid_7 alpha">
        <h1><%= link_to app_title, root_path %></h1>
      </div>
      <%= render 'layouts/user_info' %>

      <%= render 'layouts/nav' %>

      <%= render 'warbands/mywarband' if user_signed_in? and not current_user.warband.blank? %>

      <section>
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
    </div>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
