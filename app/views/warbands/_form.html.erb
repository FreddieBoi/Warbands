<%= form_for @warband, :validate => true do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
  <%= f.label :name, "Warband name" %>
</div>
<div class="field">
  <%= f.text_field :name %>
</div>
<% @warband.members.each.with_index do |member, index| %>
<%= f.fields_for :members, member do |member_fields| %>
<div class="field">
  <%= member_fields.label :name, "Member #{index+1}" %>
</div>
<div class="field">
  <%= member_fields.text_field :name %>
</div>
<% end %>
<% end %>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
