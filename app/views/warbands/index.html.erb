<h1>Listing warbands</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Reputation</th>
    <th>Pos x</th>
    <th>Pos y</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @warbands.each do |warband| %>
  <tr>
    <td><%= warband.name %></td>
    <td><%= warband.reputation %></td>
    <td><%= warband.pos_x %></td>
    <td><%= warband.pos_y %></td>
    <td><%= link_to 'Show', warband %></td>
    <td><%= link_to 'Edit', edit_warband_path(warband) %></td>
    <td><%= link_to 'Destroy', warband, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

