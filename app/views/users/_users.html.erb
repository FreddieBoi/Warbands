<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="index">
  <tr>
    <th>Gravatar</th>
    <th><%= sortable "name" %></th>
    <th><%= sortable "admin", "Status" %></th>
    <th>Warband</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= gravatar_for user, :size => 30 %></td>
    <td><%= link_to user.name, user %> <span class="you"><%= "This is you!" if current_user?(user) %></span></td>
    <td><%= user.admin ? "Administrator" : "User" %></td>
    <td><%= user.warband.blank? ? "This user doesn't have a warband yet" : link_to(user.warband.name, user.warband) %></td>
  </tr>
  <% end %>
</table>
<p>
  <%= will_paginate @users %>
</p>
