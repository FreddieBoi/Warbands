<h1><%= gravatar_for @user %>
<%= @user.name %></h1>
<p>
  <%= @user.email %>
</p>
<% if user_signed_in? and current_user?(@user) %>
<p>
  <%= link_to 'Edit account', edit_user_registration_path %>
</p>
<% end %>
<br />
<p>
  <b>Warband:</b>
</p>
<% if @warband.blank? %>
<p>
  <% if current_user?(@user) %>
  You don't have a warband yet. <%= link_to "Create one now!", new_warband_path %>
  <% else %>
  This user doesn't have a warband yet.
  <% end %>
</p>
<% else %>
<%= render @warband %>
<% end %>
<br />
<p>
  <%= link_to 'List of all users', users_path %>
</p>
