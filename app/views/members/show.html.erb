<h2><%= @member.name %></h2>
<p>
  Member of <%= link_to @warband.name, @warband %> of <%= gravatar_for(@user, :size => 16) %><%= link_to @user.name, @user %>
</p>
<p>
  <b>Level:</b>
  <b>
  <span class="level"><%= @member.level %></span>
  </b>
</p>
<p>
  <b>Health:</b>
  <span class="health"><%= @member.health %> / <%= @member.max_health %></span>
</p>
<p>
  <b>Experience:</b>
  <span class="experience"><%= @member.experience %> / <%= @member.max_experience*@member.level %></span>
</p>
<h3>Items</h3>
<% if @member.items.empty? %>
<p>
  This member doesn't have any items yet.
</p>
<% else %>
<ul class="items">
  <%= render :partial => "shared/item", :collection => @member.items %>
</ul>
<% end %>
<br />
<% if current_user.admin? %>
<%= link_to 'Edit', edit_member_path(@member) %> |
<%= link_to 'Destroy', @member, :confirm => 'Are you sure?', :method => :delete %> |
<% end %>
<%= link_to 'List of all members', members_path %>

