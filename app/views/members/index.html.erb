<h2><%= @title %></h2>
<%= form_tag members_path, :method => 'get', :id => "members_search" do %>
<label>
  Search by name:
</label>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Search", :name => nil %>
<div id="members">
  <%= render 'members' %>
</div>
<% end %>
<br />
<%= link_to 'Create new member', new_member_path if current_user.admin? %>
